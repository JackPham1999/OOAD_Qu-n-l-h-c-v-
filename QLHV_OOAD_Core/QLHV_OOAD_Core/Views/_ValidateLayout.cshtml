<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Merged Forms Page Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //Meta tag Keywords -->
    <link rel="stylesheet" href="~/css/login.css" type="text/css" media="all" />
</head>
<body>
    <div>
        <section class="form-26">
            <div class="form-26-mian">
                <div class="layer">
                    <div class="wrapper">
                        <div class="form-inner-cont">
                            <div class="forms-26-info">
                                <h2>Đăng Nhập</h2><br>
                            </div>
                            <div class="form-right-inf">
                                <form action="Login" method="post" class="signin-form">
                                    <div class="forms-gds">
                                        <div class="form-input">
                                            <input type="text" name="" placeholder="Tên Đăng Nhập" required />
                                        </div>
                                        <div class="form-input">
                                            <input type="password" name="" placeholder="Mật Khẩu" required />
                                        </div>
                                        <div class="form-input"><button class="btn">Login</button></div>
                                    </div>
                                </form>

                            </div>
                            <div class="copyright text-center">
                                <p>
                                    © 2019 Quản Lý Học Vụ - UIT
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        @RenderBody()
    </div>
</body>
</html>
