
@{
    ViewData["Title"] = "ValidateForm";
    Layout = "~/Views/_ValidateLayout.cshtml";
}



<section class="form-26">
    <div class="form-26-mian">
        <div class="layer">
            <div class="wrapper">
                <div class="form-inner-cont">
                    <div class="forms-26-info">
                        <h2>Đăng Nhập</h2><br>
                    </div>
                    <div class="form-right-inf">
                        <form action="Login" method="post" class="signin-form">
                            <div class="forms-gds">
                                <div class="form-input">
                                    <input type="text" name="ID" placeholder="Tên Đăng Nhập" required />
                                </div>
                                <div class="form-input">
                                    <input type="password" name="MatKhau" placeholder="Mật Khẩu" required />
                                </div>
                                <div class="form-input"><button class="btn">Đăng Nhập</button></div>
                            </div>
                        </form>

                    </div>
                    <div class="copyright text-center">
                        <p>
                                © 2019 Quản Lý Học Vụ - UIT
                         </p>
                        <partial name="_CookieConsentPartial" />
                    </div>
                </div>

            </div>
        </div>
    </div>


</section>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
