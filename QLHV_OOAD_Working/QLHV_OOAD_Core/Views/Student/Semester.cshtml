
@{
    ViewData["Title"] = "Semester";
    Layout = "~/Views/_GeneralLayout.cshtml";
}

@{
    List<string> hocky = (List<string>)ViewData["HocKy"];
    string[,] Diem_1 = (string[,])ViewData["Diem_1"];
    string[,] Diem_2 = (string[,])ViewData["Diem_2"];
}
